doctype html
html(lang="ko")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Noom - Real-time Chat
        link(rel="stylesheet", href="/public/css/style.css")
    body.chat-body
        // Header
        .header
            .header-content
                .header-logo-section
                    .logo-icon-wrapper
                        svg.logo-icon(xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor")
                            path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z")
                    div
                        h1.header-title Noom
                        p.header-subtitle Real-time messaging
                .connection-status
                    .status-indicator
                    span.status-text Connected
        .chat-container
            div#welcome
                form
                    .input-wrapper
                        input#roomName.nickname-input(placeholder="Room name", required=true, type="text")
                        svg.input-icon.icon-translate(xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor")
                            path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z")
                    .input-wrapper
                        input#nickname.nickname-input(placeholder="Your nickname", required=true, type="text")
                        svg.input-icon.icon-translate(xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor")
                            path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z")
                    button.btn-primary.btn-hover(type="submit") Enter Room
                h4 Open Rooms:
                ul#roomlist

            // Main Chat Container
            .chat-main#room
                h3#roomTitle

                // Messages Container
                .messages-container
                    ul#messageList.message-list

                // Message Input Form
                .message-input-section
                    form#message.message-form
                        .input-wrapper
                            input.message-input(type="text" placeholder="Type your message..." required)
                        button.btn-send.btn-hover(type="submit")
                            span Send
                            svg.send-icon(xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor")
                                path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8")

        // Footer
        .footer
            p.footer-text Built with Socket.io Â· Real-time messaging

        script(src="/socket.io/socket.io.js")
        script(src="/public/js/app.js") 