doctype html
html(lang="ko")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Noom - Real-time Chat
        script(src="https://cdn.tailwindcss.com")
        style.
            .btn-hover:hover {
                transform: translateY(-2px);
            }
            .icon-translate {
                transform: translateY(-50%);
            }
    body.bg-gradient-to-br.from-indigo-50.via-purple-50.to-pink-50.min-h-screen.flex.items-center.justify-center.p-4
        .container.max-w-4xl.w-full
            // Header
            .bg-white.rounded-t-2xl.shadow-lg.p-6.border-b.border-gray-200
                .flex.items-center.justify-between
                    .flex.items-center.space-x-3
                        .bg-gradient-to-r.from-indigo-500.to-purple-600.rounded-full.p-3
                            svg.w-8.h-8.text-white(xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor")
                                path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z")
                        div
                            h1.text-3xl.font-bold.text-gray-800 Noom
                            p.text-sm.text-gray-500 Real-time messaging
                    .flex.items-center.space-x-2
                        .w-3.h-3.bg-green-500.rounded-full.animate-pulse
                        span.text-sm.text-gray-600 Connected

            // Main Chat Container
            .bg-white.shadow-lg
                // Nickname Form
                .bg-gradient-to-r.from-indigo-50.to-purple-50.p-4.border-b.border-gray-200
                    form#nick.flex.gap-3
                        .relative.flex-1
                            input.w-full.px-4.py-3.pr-10.border-2.border-indigo-200.rounded-xl.focus_outline-none.focus_border-indigo-500.focus_ring-2.focus_ring-indigo-200.transition-all.placeholder-gray-400(type="text" placeholder="Choose your nickname..." required)
                            svg.absolute.right-3.top-1_2.icon-translate.w-5.h-5.text-gray-400(xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor")
                                path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z")
                        button.px-6.py-3.bg-gradient-to-r.from-indigo-500.to-purple-600.text-white.font-semibold.rounded-xl.transition-all.shadow-md.btn-hover(type="submit") Save

                // Messages Container
                .h-96.overflow-y-auto.p-6.space-y-3.bg-gray-50
                    ul#messageList.space-y-3

                // Message Input Form
                .bg-white.p-4.border-t.border-gray-200
                    form#message.flex.gap-3
                        .relative.flex-1
                            input.w-full.px-4.py-3.pr-12.border-2.border-gray-200.rounded-xl.focus_outline-none.focus_border-indigo-500.focus_ring-2.focus_ring-indigo-200.transition-all.placeholder-gray-400(type="text" placeholder="Type your message..." required)
                        button.px-6.py-3.bg-gradient-to-r.from-indigo-500.to-purple-600.text-white.font-semibold.rounded-xl.transition-all.shadow-md.btn-hover.flex.items-center.gap-2(type="submit")
                            span Send
                            svg.w-5.h-5(xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor")
                                path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8")

            // Footer
            .bg-white.rounded-b-2xl.shadow-lg.p-4.text-center
                p.text-sm.text-gray-500 Built with WebSockets Â· Real-time messaging

        script(src="/public/js/app.js") 